<!--new-draft.ejs-->
<!-- Start of the form container -->
<div class="form-container"> 
    <!-- Start of the form -->
    <form action="/author/newdraft" method="POST">
        <!-- Title input field -->
        <label for="title">New Title:</label><br>
        <input type="text" id="title" name="title" required><br>
        <!-- Subtitle input field -->
        <label for="subtitle">New Subtitle:</label><br>
        <input type="text" id="subtitle" name="subtitle" required><br>
        <!-- Body textarea field -->
        <label for="body">New Body:</label><br>
        <textarea id="body" name="body" rows="4" cols="50" required></textarea>
        <br>
        <!-- Button container -->
        <div class="button-container">
            <!-- Submit button -->
            <input type="submit" value="Create Draft" class="btn btn-primary create-btn">
            <!-- Back button -->
            <button onclick="location.href='/author'" class="btn btn-secondary back-btn new-draft">Back</button>
        </div>
    </form>
</div>
