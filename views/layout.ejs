<!--layout.ejs -->
<!-- Start of the HTML document -->
<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Set the title of the page to the value of the 'title' variable passed to the template -->
  <title><%= title %></title>
  <!-- Link to the Bootstrap CSS library -->
  <link href="/static/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Link to the Bootstrap Icons library -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Link to the jQuery library -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <!-- Link to the Bootstrap JavaScript library -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <!-- Link to the custom CSS file -->
  <link href="/styles.css" rel="stylesheet">
  <meta http-equiv="refresh" content="100">

</head>
<body>
  <!-- Include the navigation bar partial -->
  <%- include('nav-bar') %>

  <!-- Hero image section -->
  <div class="hero-image">
    <!-- If the 'heroText' variable is defined, display the title, subtitle, and author -->
    <% if (typeof heroText !== 'undefined') { %>
      <h1 class="hero-text"><%= heroText.title %></h1>
      <h2 class="hero-text"><%= heroText.subtitle %></h2>
      <h3 class="hero-text"><%= heroText.author %></h3>
    <% } %>
    
  </div>

  <!-- Insert the body content of the page -->
  <%- body %>

  <!-- Link to the custom JavaScript file -->
  <script src="/layout-scripts.js"></script>
</body>
</html>
